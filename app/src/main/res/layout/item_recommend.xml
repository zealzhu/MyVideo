<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/bili_default_image_tv"
                android:id="@+id/recommend_item_picture"
                android:layout_width="match_parent"
                android:layout_height="110dp" />
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_alignBottom="@id/recommend_item_picture"
                android:background="@drawable/shadow_normal_reserve"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:text="1万"
                    android:id="@+id/view_number"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:drawableStart="@drawable/ic_info_views"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="121"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:id="@+id/danmaku_number"
                    android:layout_toEndOf="@id/view_number"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:drawableStart="@drawable/ic_info_danmakus"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>
        <TextView
            android:text="标题"
            android:id="@+id/recommend_item_video_title"
            android:maxLines="2"
            android:ellipsize="end"
            android:lines="2"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="0dp" />
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:text="分类"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:id="@+id/recommend_item_category"
                android:maxLines="1"
                android:maxEms="8"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/recommend_item_more"
                android:src="@drawable/ic_more_grey_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>